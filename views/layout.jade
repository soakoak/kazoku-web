    mixin apple_favicon(width)
      - var size = width + "x" + width;
      - var uri = "/icons/apple-touch-icon-" + size + ".png";
      link(rel="apple-touch-icon", sizes = size, href = uri)
    - var apple_favicon_sizes = [57, 114, 72, 144, 60, 120, 76, 152];
    each val in apple_favicon_sizes
      +apple_favicon(val)

    mixin favicon(width)
      - var size = width + "x" + width;
      - var uri = "/icons/favicon-" + size + ".png";
      link(rel="icon", type="image/png" sizes = size, href = uri)
    - var favicon_sizes = [196, 160, 96, 16, 32]
    each val in favicon_sizes
      +favicon(val)

